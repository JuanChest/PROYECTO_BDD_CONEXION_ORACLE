<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #12364d;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.UserControl.GestionAuditoriaController">

    <BorderPane AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">

        <top>
            <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Auditoría" textFill="WHITE" BorderPane.alignment="CENTER" />
        </top>

        <center>
            <TableView fx:id="tablaAuditoria">
                <columns>
                    <TableColumn fx:id="colIdAuditoria" text="ID Auditoría" />
                    <TableColumn fx:id="colTabla" text="Tabla" />
                    <TableColumn fx:id="colOperacion" text="Operación" />
               <TableColumn fx:id="colUsuario" text="Usuario" />
                    <TableColumn fx:id="colFecha" text="Fecha" />
               <TableColumn fx:id="colInfo" text="Info" />
                </columns>
            <columnResizePolicy>
               <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            </TableView>
        </center>

        <bottom>
            <HBox alignment="CENTER" spacing="10" BorderPane.alignment="CENTER">
            <Button fx:id="btnEliminar1" onAction="#regresar" style="-fx-background-color: #D0021B; -fx-text-fill: white;" text="Regresar" />
            </HBox>
        </bottom>

    </BorderPane>

</AnchorPane>
