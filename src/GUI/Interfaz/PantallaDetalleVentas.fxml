<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" style="-fx-background-color: #12364d;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.UserControl.GestionDetalleVentaController">

    <BorderPane AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">

        <!-- Top: MenÃº superior (NO TOCAR) -->
        <top>
            <MenuBar BorderPane.alignment="TOP_LEFT">
                <menus>
                    <Menu text="Clientes">
                        <items>
                            <MenuItem fx:id="menuClientesPichincha" onAction="#irClientesPichincha" text="Clientes_Pichincha" />
                            <MenuItem fx:id="menuClientesCotopaxi" onAction="#irClientesCotopaxi" text="Clientes_Cotopaxi" />
                            <MenuItem fx:id="menuClientesTungurahua" onAction="#irClientesTungurahua" text="Clientes_Tungurahua" />
                            <MenuItem onAction="#irClientesGlobal" text="Clientes_Global" />
                        </items>
                    </Menu>
                    <Menu text="Tiendas">
                        <items>
                            <MenuItem fx:id="menuTiendasPichincha" onAction="#irTiendasPichincha" text="Tiendas_Pichincha" />
                            <MenuItem fx:id="menuTiendasCotopaxi" onAction="#irTiendasCotopaxi" text="Tiendas_Cotopaxi" />
                            <MenuItem fx:id="menuTiendasTungurahua" onAction="#irTiendasTungurahua" text="Tiendas_Tungurahua" />
                        </items>
                    </Menu>
                    <Menu text="Ventas">
                        <items>
                            <MenuItem fx:id="menuVentasPichincha" onAction="#irVentasPichincha" text="Ventas_Pichincha" />
                            <MenuItem fx:id="menuVentasCotopaxi" onAction="#irVentasCotopaxi" text="Ventas_Cotopaxi" />
                            <MenuItem fx:id="menuVentasTungurahua" onAction="#irVentasTungurahua" text="Ventas_Tungurahua" />
                        </items>
                    </Menu>
                    <Menu text="Inventario">
                        <items>
                            <MenuItem fx:id="menuInventarioPichincha" onAction="#irInventarioPichincha" text="Inventario_Pichincha" />
                            <MenuItem fx:id="menuInventarioCotopaxi" onAction="#irInventarioCotopaxi" text="Inventario_Cotopaxi" />
                            <MenuItem fx:id="menuInventarioTungurahua" onAction="#irInventarioTungurahua" text="Inventario_Tungurahua" />
                        </items>
                    </Menu>
                    <Menu text="Detalle_Venta">
                        <items>
                            <MenuItem fx:id="menuDetalleVentaPichincha" onAction="#irDetalleVentaPichincha" text="DetalleVenta_Pichincha" />
                            <MenuItem fx:id="menuDetalleVentaCotopaxi" onAction="#irDetalleVentaCotopaxi" text="DetalleVenta_Cotopaxi" />
                            <MenuItem fx:id="menuDetalleVentaTungurahua" onAction="#irDetalleVentaTungurahua" text="DetalleVenta_Tungurahua" />
                        </items>
                    </Menu>
                    <Menu text="Provincia">
                        <items>
                            <MenuItem onAction="#irProvincia" text="Provincia" />
                        </items>
                    </Menu>
                    <Menu text="Productos">
                        <items>
                            <MenuItem onAction="#irProductos" text="Productos" />
                        </items>
                    </Menu>
                    <Menu text="Proveedores">
                        <items>
                            <MenuItem onAction="#irProveedores" text="Proveedores" />
                        </items>
                    </Menu>
                    <Menu mnemonicParsing="false" text="Auditoria" />
                </menus>
            </MenuBar>
        </top>

        <!-- Left: Formulario -->
        <left>
            <VBox prefWidth="250.0" spacing="10.0" style="-fx-background-color: #0f2c3f;">
                <padding>
                    <Insets bottom="15.0" left="10.0" right="10.0" top="15.0" />
                </padding>

                <Label style="-fx-font-weight: bold;" text="Formulario Detalle Venta" textFill="WHITE" />

                <TextField fx:id="ventaIdField" promptText="ID Venta" />
                <TextField fx:id="detalleIdField" promptText="ID Detalle" />
                <TextField fx:id="productoIdField" promptText="ID Producto" />
                <TextField fx:id="cantidadField" promptText="Cantidad" />
                <TextField fx:id="precioUnitarioField" promptText="Precio Unitario" />
                <TextField fx:id="subtotalField" promptText="Subtotal" />

                <HBox spacing="10.0">
                    <children>
                        <Button fx:id="btnGuardar" onAction="#guardarDetalleVenta" style="-fx-background-color: #20dad8; -fx-text-fill: white;" text="Guardar" />
                        <Button fx:id="btnActualizar" onAction="#editarDetalleVenta" style="-fx-background-color: #20dad8; -fx-text-fill: white;" text="Actualizar" />
                        <Button fx:id="btnEliminar" onAction="#eliminarDetalleVenta" style="-fx-background-color: #D0021B; -fx-text-fill: white;" text="Eliminar" />
                    </children>
                </HBox>
            </VBox>
        </left>

        <!-- Center: Tabla -->
        <center>
            <TableView fx:id="tablaDetalleVenta">
                <columns>
                    <TableColumn fx:id="colVentaId" text="ID Venta" />
                    <TableColumn fx:id="colDetalleId" text="ID Detalle" />
                    <TableColumn fx:id="colProductoId" text="ID Producto" />
                    <TableColumn fx:id="colCantidad" text="Cantidad" />
                    <TableColumn fx:id="colPrecioUnitario" text="Precio Unitario" />
                    <TableColumn fx:id="colSubtotal" text="Subtotal" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </center>

    </BorderPane>
</AnchorPane>
