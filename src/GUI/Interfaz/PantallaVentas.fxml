<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" style="-fx-background-color: #12364d;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.UserControl.GestionVentaController">

    <BorderPane AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">

        <!-- Top: Menú superior -->
        <top>
    <MenuBar BorderPane.alignment="TOP_LEFT">
        <menus>
            <!-- CLIENTES -->
            <Menu text="Clientes">
                <items>
                    <MenuItem onAction="#irClientesPichincha" text="Clientes_Pichincha" />
                    <MenuItem onAction="#irClientesCotopaxi" text="Clientes_Cotopaxi" />
                    <MenuItem onAction="#irClientesTungurahua" text="Clientes_Tungurahua" />
                    <MenuItem onAction="#irClientesGlobal" text="Clientes_Global" />
                </items>
            </Menu>

            <!-- TIENDAS -->
            <Menu text="Tiendas">
                <items>
                    <MenuItem onAction="#irTiendasPichincha" text="Tiendas_Pichincha" />
                    <MenuItem onAction="#irTiendasCotopaxi" text="Tiendas_Cotopaxi" />
                    <MenuItem onAction="#irTiendasTungurahua" text="Tiendas_Tungurahua" />
                </items>
            </Menu>

            <!-- VENTAS -->
            <Menu text="Ventas">
                <items>
                    <MenuItem onAction="#irVentasPichincha" text="Ventas_Pichincha" />
                    <MenuItem onAction="#irVentasCotopaxi" text="Ventas_Cotopaxi" />
                    <MenuItem onAction="#irVentasTungurahua" text="Ventas_Tungurahua" />
                </items>
            </Menu>

            <!-- DETALLE VENTA -->
            <Menu text="Detalle_Venta">
                <items>
                    <MenuItem onAction="#irDetalleVentaPichincha" text="DetalleVenta_Pichincha" />
                    <MenuItem onAction="#irDetalleVentaCotopaxi" text="DetalleVenta_Cotopaxi" />
                    <MenuItem onAction="#irDetalleVentaTungurahua" text="DetalleVenta_Tungurahua" />
                </items>
            </Menu>

            <!-- PROVINCIA -->
            <Menu text="Provincia">
                <items>
                    <MenuItem onAction="#irProvinciaPichincha" text="Provincia_Pichincha" />
                    <MenuItem onAction="#irProvinciaCotopaxi" text="Provincia_Cotopaxi" />
                    <MenuItem onAction="#irProvinciaTungurahua" text="Provincia_Tungurahua" />
                </items>
            </Menu>

            <!-- PRODUCTOS -->
            <Menu text="Productos">
                <items>
                    <MenuItem onAction="#irProductos" text="Productos" />
                </items>
            </Menu>

            <!-- PROVEEDORES -->
            <Menu text="Proveedores">
                <items>
                    <MenuItem onAction="#irProveedores" text="Proveedores" />
                </items>
            </Menu>
               <Menu mnemonicParsing="false" text="Auditoria" />
        </menus>
    </MenuBar>
</top>


        <!-- Left: Formulario + Botones -->
        <left>
            <VBox prefWidth="250.0" spacing="10.0" style="-fx-background-color: #0f2c3f;">
                <padding>
                    <Insets bottom="15.0" left="10.0" right="10.0" top="15.0" />
                </padding>

                <Label style="-fx-font-weight: bold;" text="Formulario de Ventas" textFill="WHITE" />

                <TextField fx:id="ventaIdField" promptText="ID Venta" />
                <TextField fx:id="tiendaIdField" promptText="ID Tienda" />
                <TextField fx:id="clienteIdField" promptText="ID Cliente" />
                <DatePicker fx:id="fechaPicker" />
                <TextField fx:id="totalField" promptText="Total" />

                <!-- Botones Actualizar y Eliminar -->
                <HBox spacing="10.0">
                    <children>
      
                      <!-- Botón Guardar -->
                      <Button fx:id="btnGuardar" onAction="#guardarVenta" style="-fx-background-color: #20dad8; -fx-text-fill: white;" text="Guardar" />
                        <Button fx:id="btnActualizar" onAction="#editarVenta" style="-fx-background-color: #20dad8; -fx-text-fill: white;" text="Actualizar" />
                        <Button fx:id="btnEliminar" onAction="#eliminarVenta" style="-fx-background-color: #D0021B; -fx-text-fill: white;" text="Eliminar" />
                    </children>
                </HBox>
            </VBox>
        </left>

        <!-- Center: Tabla -->
        <center>
            <TableView fx:id="tablaVentas">
                <columns>
                    <TableColumn fx:id="colIdVenta" text="ID Venta" />
                    <TableColumn fx:id="colIdTienda" text="ID Tienda" />
                    <TableColumn fx:id="colIdCliente" text="ID Cliente" />
                    <TableColumn fx:id="colFecha" text="Fecha" />
                    <TableColumn fx:id="colTotal" text="Total" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </center>

    </BorderPane>
</AnchorPane>
