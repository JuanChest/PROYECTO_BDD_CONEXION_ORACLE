<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #365546;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controladores.MenuPrincipalController">

    <VBox alignment="CENTER" spacing="20" AnchorPane.bottomAnchor="50" AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50" AnchorPane.topAnchor="50">

        <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Menú Principal" textFill="WHITE" />

        <Button fx:id="btnVuelos" onAction="#entrarGestionVuelos" prefHeight="37.0" prefWidth="190.0" style="-fx-background-color: #FF8614; -fx-text-fill: white; -fx-font-size: 16px;" text="Gestión de Tiendas" />
        <Button fx:id="btnEmpleados" onAction="#entrarGestionEmpleados" prefHeight="37.0" prefWidth="190.0" style="-fx-background-color: #FF8614; -fx-text-fill: white; -fx-font-size: 16px;" text="Gestión de Inventario" />
        <Button fx:id="btnReservas" onAction="#entrarGestionReservas" prefHeight="37.0" prefWidth="190.0" style="-fx-background-color: #FF8614; -fx-text-fill: white; -fx-font-size: 16px;" text="Gestión de Ventas" />
        <Button fx:id="btnAviones" onAction="#entrarGestionAviones" prefHeight="37.0" prefWidth="190.0" style="-fx-background-color: #FF8614; -fx-text-fill: white; -fx-font-size: 16px;" text="Gestión de Productos" />
        <Button fx:id="btnClientes" onAction="#entrarGestionClientes" prefHeight="37.0" prefWidth="190.0" style="-fx-background-color: #FF8614; -fx-text-fill: white; -fx-font-size: 16px;" text="Gestión de Proveedores" />
      <Button fx:id="btnTripulacion" onAction="#entrarTripulacion" prefHeight="37.0" prefWidth="190.0" style="-fx-background-color: #FF8614; -fx-text-fill: white; -fx-font-size: 16px;" text="Gestión de Clientes" />

    </VBox>

</AnchorPane>
