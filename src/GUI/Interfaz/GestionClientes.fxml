<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #12364d;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controladores.GestionClientesController">

    <BorderPane AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">

        <top>
            <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Gestión de Clientes" textFill="WHITE" BorderPane.alignment="CENTER" />
        </top>

        <center>
            <TableView fx:id="tablaClientes">
                <columns>
                    <TableColumn fx:id="colIDCliente" text="ID Cliente" />
                    <TableColumn fx:id="colNombre" text="Nombre" />
                    <TableColumn fx:id="colApellido" text="Apellido" />
                    <TableColumn fx:id="colCorreo" text="Correo" />
               <TableColumn fx:id="colTelefono" text="Teléfono" />
                </columns>
            <columnResizePolicy>
               <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            </TableView>
        </center>

        <bottom>
            <HBox alignment="CENTER" spacing="10" BorderPane.alignment="CENTER">
                <Button fx:id="btnAgregar" onAction="#agregarNuevoCliente" style="-fx-background-color: #20dad8; -fx-text-fill: white;" text="Agregar" />
                <Button fx:id="btnEditar" onAction="#editarCliente" style="-fx-background-color: #20dad8; -fx-text-fill: white;" text="Editar" />
                <Button fx:id="btnEliminar" onAction="#eliminarCliente" style="-fx-background-color: #D0021B; -fx-text-fill: white;" text="Eliminar" />
            <Button fx:id="btnEliminar1" onAction="#regresar" style="-fx-background-color: #D0021B; -fx-text-fill: white;" text="Regresar" />
            </HBox>
        </bottom>

    </BorderPane>

</AnchorPane>
